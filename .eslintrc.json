{
  "extends": "bamboo",
  "rules": {
    "no-throw-literal": 0,
    "@typescript-eslint/restrict-plus-operands": 0
  },
  "env": {
    "jest": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "project": "./tsconfig.eslint.json"
  },
  "overrides": [
    {
      "files": ["src/commands/**/*.ts"],
      "rules": {
        "@typescript-eslint/require-await": 0
      }
    }
  ]
}
