{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": ".",
		"noEmit": true,
		"types": ["vitest/globals"],
		"paths": {
			"#utils/*": ["../src/lib/util/*"],
			"#lib/*": ["../src/lib/*"],
			"#languages": ["../src/languages/index"],
			"#mocks/*": ["./mocks/*"],
			"#root/*": ["../src/*"]
		}
	},
	"include": [".", "../src"],
	"references": [{ "path": "../src" }],
	"ts-node": {
		"esm": true,
		"typeCheck": false
	}
}
