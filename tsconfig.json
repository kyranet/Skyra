{
	"compilerOptions": {
		"module": "commonjs",
        "target": "es2018",
        "lib": ["es2018"],
        "sourceMap": true,
        "declaration": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
	},
	"exclude": [
		"node_modules",
		"bin",
		"examples",
		"scripts"
	]
}
