{
	"extends": "eslint-config-bamboo",
	"compilerOptions": {
		"outDir": "./dist",
		"target": "es2020",
		"types": [
			"node",
			"node-fetch",
			"discord.js",
			"klasa",
			"klasa-dashboard-hooks"
		],
		"baseUrl": ".",
		"paths": {
			"@root/*": ["./*"],
			"@tasks/*": ["src/tasks/*"],
			"@routes/*": ["src/routes/*"],
			"@commands/*": ["src/commands/*"],
			"@lib/*": ["src/lib/*"],
			"@util/*": ["src/lib/util/*"]
		}
	},
	"include": [
		"./src/**/*",
		"./database/**/*",
		"./config.ts",
		"./config.example.ts"
	],
	"exclude": [
		"**/node_modules",
		"**/dist",
		"**/coverage"
	]
}
