{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "npm": {
    "rangeStrategy": "bump",
    "packageRules": [
      {
        "matchManagers": ["npm"],
        "matchPackagePatterns": ["typeorm", "tslib", "colorette", "i18next", "ansi-regex"],
        "enabled": false
      }
    ]
  },
  "labels": ["Meta: Dependencies"]
}
