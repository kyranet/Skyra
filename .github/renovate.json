{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:base", ":dependencyDashboard"],
	"timezone": "Europe/Amsterdam",
	"schedule": ["before 3am on Sunday"],
	"npm": {
		"rangeStrategy": "bump",
		"packageRules": [
			{
				"matchUpdateTypes": ["minor", "patch"],
				"matchCurrentVersion": "!/^0/",
				"automerge": true
			},
			{
				"matchManagers": ["npm"],
				"matchPackagePatterns": ["typeorm", "tslib", "colorette", "i18next"],
				"enabled": false
			},
			{
				"matchManagers": ["npm"],
				"matchPackagePatterns": ["ansi-regex"],
				"allowedVersions": "^5"
			},
			{
				"matchManagers": ["npm"],
				"matchPackagePatterns": ["@types/node"],
				"allowedVersions": "^2"
			},
			{
				"matchManagers": ["npm"],
				"matchPackagePatterns": ["@sapphire"],
				"groupName": "Sapphire Dependencies"
			},
			{
				"matchManagers": ["npm"],
				"matchPackagePatterns": ["@influxdata"],
				"groupName": "InfluxDB Dependencies"
			}
		]
	},
	"labels": ["Meta: Dependencies"]
}
